{
  "ConnectionStrings": {
    "IdentityServerDbConnection": "Server=.;Database=Matgr_IdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "IdentityServer": {
    "IssuerUri": "https://localhost:7146",
    "Clients": [
      {
        "ClientId": "Matgr.Products",
        "ClientSecrets": [
          {
            "Value": "Ahmed_Break_Products_SECRET"
          }
        ],
        "AllowedGrantTypes": [ "code" ],
        "AllowedScopes": [ "Matgr.Products.API", "openid", "profile", "email", "role" ],
        "RedirectUris": [ "https://localhost:7166/signin-oid" ],
        "PostLogoutRedirectUris": [ "https://localhost:7166/signout-callback-oidc" ],
        "IdentityResources": [
          {
            "Name": "openid",
            "DisplayName": "User identifier",
            "Description": "Your user identifier",
            "UserClaims": [ "sub" ],
            "Required": true,
            "Emphasize": false
          },
          {
            "Name": "profile",
            "DisplayName": "User profile",
            "Description": "Your user profile information (first name, last name, etc.)",
            "UserClaims": [ "name", "family_name", "given_name", "middle_name", "nickname", "preferred_username", "profile", "picture", "website", "gender", "birthdate", "zoneinfo", "locale", "updated_at" ],
            "Required": true,
            "Emphasize": true
          },
          {
            "Name": "email",
            "DisplayName": "User email",
            "Description": "Your email address",
            "UserClaims": [ "email", "email_verified" ],
            "Required": true,
            "Emphasize": true
          },
          {
            "Name": "role",
            "DisplayName": "User role",
            "Description": "Your user role (e.g., Admin, Customer)",
            "UserClaims": [ "role" ],
            "Required": true,
            "Emphasize": true
          }
        ]
      },
      {
        "ClientId": "Matgr.Payments",
        "ClientSecrets": [
          {
            "Value": "Ahmed_Break_PAYMENTS_SECRET"
          }
        ],
        "AllowedGrantTypes": [ "code" ],
        "AllowedScopes": [ "Matgr.Payments.API", "openid", "profile", "email", "read", "write", "role" ],
        "RedirectUris": [ "https://matgr.payments.local/signin-oidc" ],
        "PostLogoutRedirectUris": [ "https://matgr.payments.local/signout-callback-oidc" ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "Matgr.Products.API",
        "DisplayName": "Matgr Products API"
      },
      {
        "Name": "Matgr.Payments.API",
        "DisplayName": "Matgr Payments API"
      }
    ],
    "Roles": [ "Admin", "Customer" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
